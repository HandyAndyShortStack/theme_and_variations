html, body {
  height: 100%;
  background: url('random_grey_variations.png');
}

#wrap {
  min-height: 100%;
  height: auto !important;
  height: 100%;
  margin: 0 auto -60px;
}
#header {
  color:#fff;
  margin-top: 50px;
}
#menu {
  background:rgba(0, 0, 0, 0.5);
  -webkit-border-radius: 12px;
  border-radius: 12px;
  -moz-background-clip: padding; -webkit-background-clip: padding-box; background-clip: padding-box;
}
#menu li {

}
#menu a{
  padding: 10px;
  color:#fff;
}
#menu a:hover {
  background:none;
  text-decoration:underline;
}
#content {
  margin:20px 0px 20px 0px;
  color:lightblue;
  background:rgba(0, 0, 0, 0.5);
  -webkit-border-radius: 12px;
  border-radius: 12px;
  -moz-background-clip: padding; -webkit-background-clip: padding-box; background-clip: padding-box;
}
.widgetized {
  border: 2px dashed lightblue;
  padding: 10px;
  text-align:center;
  margin:10px;
  min-height:450px;
}
#push, #footer {
  height: 60px;
}
#footer {
  padding-top:20px;
  background:rgba(0, 0, 0, 0.5);
  color:#fff;
}
