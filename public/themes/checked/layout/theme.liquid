<!doctype html>
<!--[if lt IE 7]><html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]><html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]><html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if IE 9 ]><html class="ie9 no-js"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js"> <!--<![endif]-->
  <head>
    <meta charset="utf-8" />
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1' /><![endif]-->

    <title>
    {% if template == 'index' %}
      {{ page_title }}
    {% elsif template == '404' %}
      Page Not Found
    {% endif %}
    </title>

    {% if page_description %}
    <meta name="description" content="{{ page_description }}" />
    {% endif %}

    <link rel="canonical" href="{{ canonical_url }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {{ '//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css' | script_tag }}
    {{ 'style.css' | asset_url | stylesheet_tag }}

    <!--[if lt IE 9]>
    {{ '//html5shiv.googlecode.com/svn/trunk/html5.js' | script_tag }}
    <![endif]-->

  </head>

  <body>
    <div id="wrap">
      <div class="container">
        <div class="row">
          <header id="header">
            <div class="span7">
              <h1>{{ site_title }}</h1>
            </div>
            <nav class="span5">
              <ul id="menu" class="pull-right nav inline">
                {% for link in linklists.main-menu.links %}
                  <a href="{{ link.url }}" title="{{ link.title }}"{% if link.active %} class="active"{% endif %}>{{ link.title }}</a>
                {% endfor %}
              </ul>
            </nav>
          </header>
        </div>

        <div id="content" class="clearfix">
          {{ content_for_layout }}
        </div>
      </div>
      <div id="push"></div>
    </div>

    <footer id="footer">
      <div class="container">
        <div class="row">
          <div class="span12">
            Copyright &copy; {{ "now" | date: "%Y" }} {{ shop.name }}. {{ powered_by_link }}.
          </div>
        </div>
      </div>
    </footer>

    {{ '//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js' | script_tag }}
    {{ '//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js' | script_tag }}
  </body>
</html>
