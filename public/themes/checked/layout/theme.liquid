<!doctype html>
<!--[if lt IE 7]><html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]><html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]><html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if IE 9 ]><html class="ie9 no-js"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js"> <!--<![endif]-->
  <head>
    <meta charset="utf-8" />
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1' /><![endif]-->
    <title>{{ site.title }} - {{ page.title }}</title>
    <meta name="description" content="{{ site.description }}" />
    {{ site.meta_tags }}
    {{ site.gwt }}
    <link rel="canonical" href="{{ site.custom_url }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet" media="screen">
    <link href="{{ site.custom_css }}" rel="stylesheet" media="screen">
    {% for style in theme.styles %}
      <style>
        {{ style }}
      </style>
    {% endfor %}
    <!--[if lt IE 9]>
    <link href="//html5shiv.googlecode.com/svn/trunk/html5.js" rel="stylesheet" media="screen">
    <![endif]-->
  </head>

  <body>
    <div id="wrap">
      <div class="container">
        <div class="row">
          <header id="header">
            <div class="span7">
              <h1>{{ site.title }}</h1>
            </div>
            <nav class="span5">
              <ul id="menu" class="pull-right nav inline">
                <!-- {% for page in site.pages %}
                  <li><a href="{{ page.url }}" class="active">{{ page.title }}</a></li>
                {% endfor %} -->
              </ul>
            </nav>
          </header>
        </div>

        <div id="content" class="clearfix">
          <h2 id="page-title">{{ page.title }}</h2>
          {{ content_for_page }}
          <div id="test-image">
            <img src="{{ 'beach_ball.png' | asset_url }}" />
          </div>
        </div>
      </div>
      <div id="push"></div>
    </div>

    <footer id="footer">
      <div class="container">
        <div class="row">
          <div class="span12">
            Copyright &copy; {{ site.subdomain }}.
          </div>
        </div>
      </div>
    </footer>

    {{ site.closing_tag }}
    {{ site.gac }}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
    {% for javascript in theme.javascripts %}
      <script src="{{ javascript }}"></script>
    {% endfor %}
  </body>
</html>

